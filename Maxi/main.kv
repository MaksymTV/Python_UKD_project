<MenuScreen>:
    canvas.before:
        Color: 
            rgba: 170,234,128,0.250
        Rectangle:
            pos: self.pos
            size: self.size
        
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label: 
            id: title_game
            text: 'Gandalf team'
            font_name: 'assets/RubikScribble-Regular'
            font_size: '55dp'
            size_hight_y: .2
            color: "#9BD770"
        Image:
            source: 'assets/img/24073-6-gandalf.png'
            size_hight_y:.3
            allow_stretch: True
        
        Widget:
            size_hight_y: .3

        Button:
            text: "Settings"
            color: '#1B3409'
            font_size: '20dp'
            font_name: 'assets/RubikScribble-Regular.ttf'
            backgroung_color: '#EBF7E3'
            size_hight_y: 0.10
            backgroung_normal: ""
            backgroung_down: ''
            on_press: self.backgroung_color = '#9BD770'
            on_release: self.backgroung_color = '#9BA370'
        Button:
            text: "Start"
            color: '#1B3409'
            font_size: '20dp'
            font_name: 'assets/RubikScribble-Regular.ttf'
            backgroung_color: '#EBF7E3'
            backgroung_normal: ""
            backgroung_down: ''
            size_hight_y: 0.10
            on_press: root.manager.current = "game"

<GameScreen>:
    BoxLayout:
        padding: '20dp'
        spacing: '20dp'
        orientation: 'vertical'
        BoxLayout:
            size_hight_y: 0.10
            Button:
                text: "X"
                size_hight_y: 0.10
                size_hight_x: 0.10
                on_press: root.manager.current = 'menu'
        BoxLayout
            
            orientation: 'vertical'
            size_hight_y: 0.80
            Label:
                id: 'result'
                text: root.c_click
            Button:
                on_press: self.size_hight_y = 0.7
                on_release: self.size_hight_y = 0.8
                on_press: root.clicker()
        BoxLayout:
            size_hight_y: 0.10